@{
    ViewBag.Title = " CreatePlaylist";
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Create Playlist</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.3.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://kit.fontawesome.com/60e83084da.js" crossorigin="anonymous"></script>
    <style>
        h1 {
            margin-top: 20px;
        }

        p {
            margin-bottom: 20px;
        }

        h4 {
            font-family: 'SFU Futura';
            color: white;
        }

        * {
            margin: 0;
            padding: 0;
            font-family: 'Helvetica Neue', sans-serif;
            box-sizing: border-box;
        }

        .backgroundall {
            /*    align-items: center;*/
            justify-content: center;
            display: flex;
            flex-wrap: nowrap;
        }

        .container {
            display: flex;
            width: 100%;
            height: 90vh;
            background: rgba(0, 0, 0, 0);
            align-items: start;
            justify-content: flex-start;
            flex-wrap: nowrap;
            position: relative;
        }

        .searchbox {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: nowrap;
            margin-top: 25px;
            margin-left: 50px;
        }

            .searchbox input[type=text] {
                float: right;
                padding: 6px;
                width: 400px;
                border: none;
                background: rgba(0,0,0,0);
                margin-left: 6px;
                font-size: 17px;
                box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            }

                .searchbox input[type=text]:focus {
                    outline: 4px #373737;
                }

        .progressbar {
            display: flex;
            width: 100%;
            height: 10vh;
            background: #fff;
            align-items: center;
            justify-content: space-between;
            flex-wrap: nowrap;
            padding: 25px 35px;
        }

            .progressbar > * {
                margin-right: 20px;
            }

                /* Bỏ margin-right của phần tử cuối cùng */
                .progressbar > *:last-child {
                    margin-right: 0;
                }

        .current-time {
            font-family: 'Helvetica Neue', sans-serif;
            color: #7f7f7f;
            font-size: 12px;
        }

        .total-duration {
            font-family: 'Helvetica Neue', sans-serif;
            color: #7f7f7f;
            font-size: 12px;
        }

        .navbar {
            padding: 10px 0px;
            width: 100px;
            height: 100%;
            background: #373737;
            text-align: center;
            align-items: center;
            justify-content: center;
        }

        .logo {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 20px;
            border-radius: 10%;
            margin-bottom: 2px;
        }

        .thumbblur {
            position: absolute;
            z-index: 0;
            width: 650px;
            opacity: 30%;
            padding: 10px, 500px;
            filter: blur(30px);
            display: flex;
            border-radius: 5%;
        }

        .menu {
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

            .menu div {
                width: 60px;
                height: 60px;
                margin: 4px;
                /*  background: #ffff;*/
                display: inline-flex;
                align-items: center;
                justify-content: center;
                color: #fff;
                cursor: pointer;
            }

        .music-player {
            background-color: rgba(0, 0, 0, 0.05);
            position: relative;
            width: 400px;
            height: 100%;
            padding: 25px 35px;
            text-align: center;
            border-radius: 5%;
            margin-left: 10px;
        }

        nav {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
        }

            nav .circle {
                border-radius: 50%;
                width: 40px;
                height: 40px;
                line-height: 40px;
                background: #fff;
                color: #333;
                box-shadow: 0 5px 10px rgba(0, 0, 0, 0.22);
            }

        .song-img {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 98%;
            border-radius: 10%;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
        }

        #volume {
            -webkit-appearance: none;
            width: 50px;
            height: 4px;
            background: #373737;
            color: #373737;
            border-radius: 4px;
            cursor: pointer;
            margin: 40px 0;
        }

            #volume::-webkit-slider-thumb {
                -webkit-appearance: none;
                background: #ffffff;
                width: 8px;
                height: 8px;
                border-radius: 50%;
                border: 3px solid #373737
            }

        #progress {
            width: 100%;
            height: 3.5px;
            background: #373737;
            color: #373737;
            border-radius: 4px;
            cursor: pointer;
            margin: 40px 0;
        }

            #progress::-webkit-slider-thumb {
                -webkit-appearance: none;
                background: #ffffff;
                width: 13px;
                height: 13px;
                border-radius: 50%;
                border: 3px solid #373737;
                opacity: 0;
                transition: opacity;
            }

            #progress:hover::-webkit-slider-thumb {
                opacity: 1;
            }

        .controls {
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .controls div {
                width: 60px;
                height: 60px;
                margin: 4px;
                background: #ffff;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                border-radius: 50%;
                color: #373737;
                cursor: pointer;
            }

                .controls div:nth-child(3) {
                    background: #373737;
                    color: #fff;
                }

        .pcontrols {
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .pcontrols div {
                width: 10px;
                height: 60px;
                margin: 10px;
                background: #ffff;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                border-radius: 50%;
                color: #373737;
                cursor: pointer;
            }
    </style>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();


        });
        $(document).ready(function () {
            $('.add-songs-button').click(function () {
                var playlistId = $(this).data('playlist-id');
                window.location.href = '/Home/SelectSongs?playlistId=' + playlistId;
            });
        });
    </script>

</head>
<body>
    
    <div class="container py-4">
        
        <h3 class="text-center text-uppercase"></h3>
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h6 class="text-uppercase">Danh sách bài hát</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    @using (Html.BeginForm("CreatePlaylist", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label>Tên Playlist:</label>
                            <input type="text" id="tenplaylist" name="tenplaylist" class="form-control" />
                        </div>
                        <div class="form-group text-right">
                            <input type="submit" id="btnUpload" class="btn btn-secondary btn-lg" value="Upload" />
                        </div>

                        <div class="form-group">
                            <label>Chọn ảnh bìa:</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" id="pictureupload" name="pictureupload" class="custom-file-input" />
                                    <label class="custom-file-label"></label>
                                </div>
                            </div>
                        </div>


                    }
                </div>



                <table id="dataTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="album-cover">Ảnh bìa</th>
                            <th>Tên Playlist</th>
                            <th>Add Songs</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="album-cover">
                                    <img src="@Url.Content(@item.hinh)" width="100" height="100">
                                </td>
                                <td>@item.tenplaylist</td>
                                <td>
                                    <button type="button" class="btn btn-primary add-songs-button" data-playlist-id="@item.idPlaylist">Add Songs</button>
                                </td>
                                <td>
                                    @using (Html.BeginForm("DeletePlaylist", "Home", new { idPlaylist = item.idPlaylist }, FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this playlist?');" }))
                                    {
                                        <button type="submit" class="btn btn-danger delete-button"><i class="fa fa-trash"></i> Delete</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                Then in your JavaScript code, you can add an event listener for the "Add Songs" button to redirect to the page where the user can select the songs to add:

                <script>

                </script>

                <style>
                    /* Album cover column */
                    .album-cover {
                        width: 200px;
                    }
                </style>

            </div>
        </div>
    </div>
</body>
</html>  